													{{this.itemprice}}
												</div>
												<del id="itemMRP{{this._id}}">{{this.itemMRP}}</del>
											</td>
											<td>

												<a href="/deleteFromCart/{{this._id}}"
													onclick="return confirm('Are you sure?')"><span
