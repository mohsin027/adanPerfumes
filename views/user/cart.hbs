	<script>
		function addQ(id) {
			axios.get('/addQuantity/' + id).then((result) => {
				if (result.data.stockEmpty) {
					console.log("ste", result.data.stockEmpty)
					document.getElementById(`message${id}`).innerText = "No more stocks"
				} else {
					let totalAmount = result.data.totalAmount
					let totalMRP = result.data.totalMRP
					let discount = result.data.discount
					let Qty = result.data.Qty
					let products = result.data.products
					let itemprice;


					console.log(totalAmount, totalMRP, discount, "ggg")
					for (let i of products) {
						if (i._id == id) {
							itemprice = i.itemprice
							itemMRP = i.itemMRP
						}
					}

					document.getElementById('totalAmount1').innerText = totalAmount
					document.getElementById('totalPrice').innerHTML = totalAmount
					document.getElementById('totalMRP1').innerText = totalMRP
					document.getElementById('discount1').innerText = discount
					document.getElementById(`quantity${id}`).value = Qty
					document.getElementById(`itemprice${id}`).innerText = itemprice
					document.getElementById(`itemMRP${id}`).innerText = itemMRP
					document.getElementById(`message${id}`).innerText = null

				}
			})
		}
		function remQ(id) {
			if (document.getElementById(`quantity${id}`).value <= 1) {

			} else {
				axios.get('/minusQuantity/' + id).then((result) => {
					let totalAmount = result.data.totalAmount
					let totalMRP = result.data.totalMRP
					let discount = result.data.discount
					let Qty = result.data.Qty
					let products = result.data.products
					let itemprice;
					if (!Qty) {
						window.location.reload()
					}


					console.log(Qty, totalAmount, totalMRP, discount, "ggg")
					for (let i of products) {
						if (i._id == id) {
							itemprice = i.itemprice
							itemMRP = i.itemMRP
						}
					}
					document.getElementById(`message${id}`).innerText = null
					document.getElementById('totalAmount1').innerText = totalAmount
					document.getElementById('totalPrice').innerHTML = totalAmount
					document.getElementById('totalMRP1').innerText = totalMRP
					document.getElementById('discount1').innerText = discount
					document.getElementById(`quantity${id}`).value = Qty
					document.getElementById(`itemprice${id}`).innerText = itemprice
					document.getElementById(`itemMRP${id}`).innerText = itemMRP
				})
			}
		}

	</script>

