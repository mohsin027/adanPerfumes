	{{!-- --}}


	<div class="cart-wrap">
		<div class="container">
			<div class="coupon-box col-md-6">
				<form action="/couponValidation" method="post" accept-charset="utf-8">
					<div class="coupon-input">
						<input type="text" name="code" placeholder="Coupon Code">
						<button type="submit" class="round-black-btn">Apply Coupon</button><br>
						<label for="">&nbsp{{couponError}}</label>
					</div>
				</form>
			</div>
			<form action="/proceedToPayment" method="post">
				<div class="row">
					<div class="col-lg-8">
						<div class="main-heading h3">CHECKOUT</div>
						<div class="table-cart">

							{{!-- modal for address --}}
							<!-- Button trigger modal -->
							<button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal"
								data-bs-target="#exampleModal">
								Add Address
							</button>
							<label for="" class="text-danger">&nbsp{{addressError}}</label>



							{{!-- address --}}

							<div>


								{{#each addressess}}
								<div class="card card-block rounded p-2" style="background-color:#d1d2d6 ;">
									<label for="add{{inc @key}}" class="card-title">{{this.name}}</label>
									<label for="add{{inc @key}}" class="card-text">
										<input type="radio" id="add{{inc @key}}" name="address"
											value="{{this.name}} ,{{this.house}},{{this.street}},{{this.place}},{{this.district}},{{this.state}},{{this.pincode}}"
											required>
										{{this.house}},{{this.street}},
									</label>
									<label for="add{{inc @key}}" class="card-title">{{this.place}},{{this.district}},</label>
									<label for="add{{inc @key}}" class="card-title">{{this.state}},{{this.pincode}},</label>

								</div>

								{{/each}}


							</div>
							{{!-- address --}}



						</div>
						<!-- /.table-cart -->
					</div>
					<!-- /.col-lg-8 -->
					<div class="col-lg-4" >
						<div class="cart-totals" style="background-color: #d1d2d6;">
							<h3>Cart Totals</h3>
							{{!-- <form action="#" method="get" accept-charset="utf-8"> --}}
								<table>
									<tbody>
										<tr>
											<td>Total MRP</td>

											<td class="">{{totalMRP}}</td>
										</tr>
										<tr>
											<td>discount</td>

											<td class="">{{discount}}</td>
										</tr>
										<tr>
											<td>Coupon Discount</td>
											<input type="number" name="couponValue" value="{{couponvalue}}" hidden>
											<td class="">{{couponValue}}</td>
										</tr>
										<tr>
											<td>Subtotal</td>
											<input type="number" name="totalAmount" value="{{totalAmount}}" hidden>
											<td class="subtotal">{{totalAmount}}</td>
										</tr>
										<tr>
											<td>Shipping</td>
											<td class="free-shipping">Free Shipping</td>
										</tr>
										<tr class="total-row">
											<td>Total</td>
											<td class="price-total"> {{totalAmount}}</td>
										</tr>
									</tbody>
								</table>

								{{!-- --}}
								<!-- /form -->
								{{!-- payment --}}
								<div class="form-check">
									<input class="" type="radio" name="paymentType" value="onlinePayment"
										id="flexRadioDefault1" />
									<label class="form-check-label" for="flexRadioDefault1"> Online payment </label>
								</div>

								<!-- Default checked radio -->
								<div class="form-check">
									<input class="" type="radio" name="paymentType" value="cod" id="flexRadioDefault2"
										checked />
									<label class="form-check-label" for="flexRadioDefault2">Cash On Delivery</label>
								</div>
								{{!-- payment --}}
								<div class="btn-cart-totals">
									{{!-- <a href="#" class="update round-black-btn" title="">Update Cart</a> --}}
									<button type="submit" class="udate round-black-btn">Proceed</button>
									{{!-- <a href="#" class="checkout round-black-btn" title="">Proceed to Checkout</a>
									--}}
								</div>
								<!-- /.btn-cart-totals -->


						</div>
						<!-- /.cart-totals -->
					</div>
					<!-- /.col-lg-4 -->
			</form>
		</div>

	</div>
	</div>
	<section>
		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Enter Address</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<form action="/addAddress" method="post">
						<div class="modal-body">

							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
								<div class="col-sm-10">
									<input type="text" name="name" class="form-control-plaintext" id="staticEmail"
										value="" required>
								</div>
							</div>

							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">House</label>
								<div class="col-sm-10">
									<input type="text" name="house" class="form-control-plaintext" id="staticEmail"
										value="" required>
								</div>
							</div>
							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">Street</label>
								<div class="col-sm-10">
									<input type="text" name="street" class="form-control-plaintext" id="staticEmail"
										value="" required>
								</div>
							</div>
							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">Place</label>
								<div class="col-sm-10">
									<input type="text" name="place" class="form-control-plaintext" id="staticEmail"
										value="" required>
								</div>
							</div>
							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">district</label>
								<div class="col-sm-10">
									<input type="text" name="district" class="form-control-plaintext" id="staticEmail"
										value="">
								</div>
							</div>
							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">state</label>
								<div class="col-sm-10">
									<input type="text" name="state" class="form-control-plaintext" id="staticEmail"
										value="" required>
								</div>
							</div>
							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">pincode</label>
								<div class="col-sm-10">
									<input type="text" name="pincode" class="form-control-plaintext" id="staticEmail"
										value="" required>
								</div>
							</div>




						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							<button type="submit" class="btn btn-primary">Save changes</button>
						</div>
					</form>
				</div>
			</div>
		</div>
