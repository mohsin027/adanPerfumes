          <h1>Edit Profile</h1>
          <div class="form-group row">
            <input type="text" name="id" id="" value="{{this.id}}" hidden>
            <label class="col-lg-3 col-form-label form-control-label">Name</label>
            <div class="col-lg-9">
              <input class="form-control" type="text" name="name" value="{{this.name}}">
            </div>
          </div>

    

          <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">Address</label>
            <div class="col-lg-9">
              <input class="form-control" type="text" name="house" value="{{this.house}}" placeholder="House">
            </div>

          </div>
          <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>
            <div class="col-lg-9">
              <input class="form-control" type="text" name="street" value="{{this.street}}" placeholder="Street">
            </div>

          </div>

          <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>
            <div class="col-lg-5">
              <input class="form-control" type="text" name="place" value="{{this.place}}" placeholder="Place">
            </div>
            <div class="col-lg-4">
              <input class="form-control" type="text" name="district" value="{{this.district}}" placeholder="District">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>
            <div class="col-lg-5">
              <input class="form-control" type="text" name="state" value="{{this.state}}" placeholder="State">
            </div>
            <div class="col-lg-4">
              <input class="form-control" type="text" name="pincode" value="{{this.pincode}}" placeholder="Pincode">
            </div>
          </div>


 
          <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>
            <div class="col-lg-9">
              <a href="/profile" class="btn btn-secondary">Cancel</a>
              <input class="btn btn-primary" type="submit" value="Save Changes">
            </div>
          </div>
        </form>
        {{/each}}
