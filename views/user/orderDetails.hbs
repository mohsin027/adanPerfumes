                      <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                    </ul>
                  </div>
                </div> --}}
              </div>
              <table class="table table-borderless">
                <tbody>
                  {{#each this.product}}
                  <tr>
                    <td>
                      <div class="d-flex mb-2">
                        <div class="flex-shrink-0">
                          <img src="/images/{{this.mainImage.filename}}" alt="" width="35" class="img-fluid">
                        </div>
                        <div class="flex-lg-grow-1 ms-3">
                          <h6 class="small mb-0"><a href="#" class="text-reset">{{this.title}}</a></h6>
                          <span class="small">{{this.desc}}</span>
                        </div>
                      </div>
                    </td>
                    <td>{{this.quantity}}</td>
                    <td class="text-end">{{this.itemprice}}</td>
                  </tr>
                  {{/each}}

                </tbody>
                <tfoot>
                  {{!-- <tr>
                    <td colspan="2">Subtotal</td>
                    <td class="text-end">{{this.price}}</td>
                  </tr>
                  <tr>
                    <td colspan="2">Shipping</td>
                    <td class="text-end">$20.00</td>
                  </tr> --}}

                  <tr class="fw-bold">
                    <td colspan="2">TOTAL</td>
                    <td class="text-end">{{this.total}}</td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
          <!-- Payment -->
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <h3 class="h6">Payment Method</h3>
                  <p>{{this.paymentType}}<br>
                    Total: {{this.total}}
                    {{#if paid}}
                    <span class="badge bg-success rounded-pill">PAID</span>
                    {{else}}
                    <span class="badge bg-danger rounded-pill">Not Paid</span>
                    {{/if}}
                  </p>
                </div>
                <div class="col-lg-6">
                  <h3 class="h6">Billing address</h3>
                  <address>
                    <strong>{{this.name}}</strong><br>
                    {{this.address}}
                    {{!-- San Francisco, CA 94103<br> --}}
                    <abbr title="Phone">P:</abbr> (123) 456-7890
                  </address>
                </div>
              </div>
            </div>
          </div>
        </div>
