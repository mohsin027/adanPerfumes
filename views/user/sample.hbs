<!DOCTYPE html>
<html>

<head>
    <title>Shopping Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<html>

<!-- Navbar -->
<nav class="navbar navbar-expand-md bg-dark navbar-dark">
    <a class="navbar-brand" href="#">My Shop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Contact</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Cart</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Logout</a>
            </li>
        </ul>
    </div>
</nav>

<body class="container-fluid mt-0">
    <div class="row mt-2">

        <!-- Sidebar -->
        <div class="col-md-3">
            <form>
            <h4>Categories</h4>
            <ul class="list-group">
                {{#each categoryData}}
                <div class="checkbox"><label><input type="radio" onchange="this.form.submit()"
                                  name="category" value="{{this._id}}" {{#ifEqual this.name ../categoryName }} checked
                                  {{/ifEqual}}>{{this.name}}</label></div>
                            
                            {{/each}}
              
            </ul>
            <hr>
            <h4>Sort</h4>
             <div class="panel panel-mobile" >
                        <div class="panel-heading" role="tab" id="headingFiveMobile">
                          <a class="panel-title accordion-toggle collapsed" role="button" data-toggle="collapse"
                            data-parent="#filter-menu-mobile" href="#collapseFiveMobile" aria-expanded="false"
                            aria-controls="collapseFiveMobile">
                         
                          </a><!-- /.panel-title -->
                        </div><!-- /.panel-heading -->
                        {{!-- <div id="collapseFiveMobile" class="panel-collapse collapse" role="tabpanel"
                          aria-labelledby="headingFiveMobile"> --}}
                          <div class="panel-body">
                            <div class="checkbox"><label><input type="radio" onchange="this.form.submit()" name="filter"
                                  value="0" {{#ifEqual sort "0" }} checked {{/ifEqual}}>New Launches</label></div>
                            <div class="checkbox"><label><input type="radio" onchange="this.form.submit()" name="filter"
                                  value="1" onchange="this.form.submit()" {{#ifEqual sort "1" }} checked
                                  {{/ifEqual}}>Low to High</label></div>
                            <div class="checkbox"><label><input type="radio" onchange="this.form.submit()" name="filter"
                                  value="-1" onchange="this.form.submit()" {{#ifEqual sort "-1" }} checked
                                  {{/ifEqual}}>High to Low</label></div>
                          </div><!-- /.panel-body -->
                          {{!--
                        </div><!-- /.panel-collapse --> --}}
                      </div><!-- /.panel -->
            <hr>
            <h4>Search</h4>
            
                <div class="input-group">
                 <div class="mt-4">
                  {{!-- <form id="search-form" action="" method="get" enctype="multipart/form-data"> --}}
                    <div class="form-group col-xs-9 ">
                      <input class="form-control" value="{{search}}" type="text" oninput="this.form.submit()"
                        name="search" placeholder="Search" />
                    </div>
                    <div class="form-group col-xs-3">
                      <button type="submit" class="btn btn-block btn-primary">Search</button>
                    </div>
                    <a class="btn btn-link pull-right text-white" href="/shop">Clear Selections</a>
                    {{!--
                  </form> --}}
                </div>
                </div>
            </form>
        </div>

        <!-- Main Content -->
        <!-- Main Content -->
        <div class="col-md-9">
            <div class="row">
  {{#each productData}}
                <!-- Product Listing 1 -->
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img class="card-img-top" src="https://via.placeholder.com/350x150">
                        <div class="card-body">
                            <h4 class="card-title">Product 1</h4>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus at
                                libero id nunc consequat porttitor non non dolor.</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
{{/each}}
                
                <!-- Repeat for additional products -->

            </div>
        </div>
    </div>
</body>

</html>