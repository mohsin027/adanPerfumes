<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="x-ua-compatible" content="ie=edge">
<title>Products- Adan Perfumes</title>
<meta name="description" content="description">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Favicon -->
<link rel="shortcut icon" href="assets/images/favicon.png" />
<!-- Plugins CSS -->
<link rel="stylesheet" href="assets/css/plugins.css">
<!-- Bootstap CSS -->
<link rel="stylesheet" href="assets/css/bootstrap.min.css">
<!-- Main Style CSS -->
<link rel="stylesheet" href="assets/css/style.css">
<link rel="stylesheet" href="assets/css/responsive.css">
</head>
<body class="template-index belle home3-boxed-layout">

<div class="pageWrapper">
	<div class="layout-boxed">
   
        <!--Top Header-->
       <div class="top-header">
      <div class="container-fluid">
        <div class="row">
          <div class="col-10 col-sm-8 col-md-5 col-lg-4">
            
          </div>
          <div class="col-sm-4 col-md-4 col-lg-4 d-none d-lg-none d-md-block d-lg-block">
         
          </div>
          <div class="col-2 col-sm-4 col-md-3 col-lg-4 text-right">
            <span class="user-menu d-block d-lg-none"><i class="anm anm-user-al" aria-hidden="true"></i></span>
            <ul class="customer-links list-inline">
              {{#if isLoggedIn}}

              <li><a href="/profile"><i class="fas fa-user-circle"></i>{{userName}}</a></li>
              <li><a href="/logout">Logout</a></li>
              {{else}}
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Create Account</a></li>
              {{/if}}
            </ul>
          </div>
        </div>
      </div>
    </div>
        <!--End Top Header-->
        <!--Header-->
        <div class="header-wrap animated d-flex">
            <div class="container-fluid">        
                <div class="row align-items-center">
                    <!--Desktop Logo-->
                    <div class="logo col-md-2 col-lg-2 d-none d-lg-block">
                        <a href="/">
                          <h2 style="text-transform: capitalize; font-size: 20px; font-weight: bold;color: rgb(81, 35, 2);">adan perfumes</h2>
                        </a>
                    </div>
                    <!--End Desktop Logo-->
                    <div class="col-2 col-sm-3 col-md-3 col-lg-8">
                        <div class="d-block d-lg-none">
                            <button type="button" class="btn--link site-header__menu js-mobile-nav-toggle mobile-nav--open">
                                <i class="icon anm anm-times-l"></i>
                                <i class="anm anm-bars-r"></i>
                            </button>
                        </div>
                        <!--Desktop Menu-->
                        <nav class="grid__item" id="AccessibleNav"><!-- for mobile -->
                            <ul id="siteNav" class="site-nav medium center hidearrow">
                                <li class="lvl1 parent megamenu"><a href="/">Home <i class="anm anm-angle-down-l"></i></a>
                                    
                                </li>
                                <li class="lvl1 parent megamenu"><a href="/shop">Shop <i class="anm anm-angle-down-l"></i></a>
                               
                                </li>
                            <li class="lvl1 parent megamenu"><a href="/shop">Product <i class="anm anm-angle-down-l"></i></a>
                               
                            </li>
                            
                            </li>
                            
                          </ul>
                        </nav>
                        <!--End Desktop Menu-->
                    </div>
                    <!--Mobile Logo-->
                    <div class="col-6 col-sm-6 col-md-6 col-lg-2 d-block d-lg-none mobile-logo">
                        <div class="logo">
                            <a href="/">
                                <h2>adan perfumes</h2>
                            </a>
                        </div>
                    </div>
                    <!--Mobile Logo-->
                    <div class="col-4 col-sm-3 col-md-3 col-lg-2">
                        <div class="site-cart">
                            <a href="/cart"  title="Cart">
                               <i class="icon anm anm-bag-l" style="font-size: 30px;"></i>

                               
                            </a>
                            <!--Minicart Popup-->
                            
                            <!--End Minicart Popup-->
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
        <!--End Header-->
        <!--Mobile Menu-->	
        <div class="mobile-nav-wrapper" role="navigation">
            <div class="closemobileMenu"><i class="icon anm anm-times-l pull-right"></i> Menu</div>
            <ul id="MobileNav" class="mobile-nav">
                <li class="lvl1 parent megamenu"><a href="/">Home <i class="anm anm-plus-l"></i></a>
                 </li>
                <li class="lvl1 parent megamenu"><a href="/shop">Shop <i class="anm anm-plus-l"></i></a>
                </li>
                
              </ul>
        </div>
        <!--End Mobile Menu-->


    <!--Body Content-->
    <div id="page-content" >
      <!--Collection Banner-->
      <div class="collection-header">
        <div class="collection-hero">
          <div class="collection-hero__image"><img class="blur-up lazyload" data-src="assets/images/cat-women2.jpg"
              src="assets/images/cat-women2.jpg" alt="Women" title="Women" /></div>
          {{!-- <div class="collection-hero__title-wrapper">
            <h1 class="collection-hero__title page-width">Shop Grid 3 Column</h1>
          </div> --}}
        </div>
      </div>
      <!--End Collection Banner-->

      <div class="container" style="margin-top: 30px;">

        <div class="row">
          <!--Sidebar-->
          <div class="col-12 col-sm-12 col-md-3 col-lg-3 sidebar filterbar pt-2" style="border: 2px solid black;border-radius:10px">
            <div class="closeFilter d-block d-md-none d-lg-none"><i class="icon icon anm anm-times-l"></i></div>
            <div class="sidebar_tags">

          <form action="">
              {{!-- search --}}
              <div class="sidebar_widget categories filter-widget">
                <div class="widget-title mb-1">
                  <h2>SEARCH</h2>
                </div>
                <div class="widget-content">
                  <ul class="sidebar_categories">

                    <div class="input-group">
                      <div class="form-outline col-md-9 pl-0">
                        <input type="search" id="form1" class="form-control" name="search" value="{{search}}" />
                      </div>
                      <button type="button" class="btn btn-primary" onclick="this.form.submit()">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                        <a href="/shopNew?search=&category=&filter=&page=">Reset Selection</a>

                  </ul>
                </div>
              </div>
              {{!-- search --}}
              <!--Categories-->
              <div class="sidebar_widget categories filter-widget">
                <div class="widget-title">
                  <h2>Categories</h2>
                </div>
                <div class="widget-content">
                  <ul class="sidebar_categories">
                    
                    {{#each categoryData}}
                    <li class="lvl-1">
                      <div class="checkbox"><label for="radio{{this._id}}"><input type="radio" onchange="this.form.submit()" name="category"
                            value="{{this._id}}" id="radio{{this._id}}" {{#ifEqual this.name ../categoryName }} checked
                            {{/ifEqual}} >{{this.name}}</label></div>

                      {{/each}}
                    </li>

                  </ul>
                </div>
              </div>
              <!--Categories-->
              {{!-- filter --}}
              <div class="sidebar_widget categories filter-widget">
                <div class="widget-title">
                  <h2>Filter</h2>
                </div>
                <div class="widget-content">
                  <ul class="sidebar_categories">


                    <li class="lvl-1">
                      <div class="panel-body">
                        <div class="checkbox"><label><input type="radio" onchange="this.form.submit()" name="filter"
                              value="0" {{#ifEqual sort "0" }} checked {{/ifEqual}}>New Launches</label></div>
                        <div class="checkbox"><label><input type="radio" onchange="this.form.submit()" name="filter"
                              value="1" onchange="this.form.submit()" {{#ifEqual sort "1" }} checked {{/ifEqual}}>Low to
                            High</label></div>
                        <div class="checkbox"><label><input type="radio" onchange="this.form.submit()" name="filter"
                              value="-1" onchange="this.form.submit()" {{#ifEqual sort "-1" }} checked {{/ifEqual}}>High
                            to Low</label></div>
                      </div>


                    </li>

                  </ul>
                </div>
              </div>
              {{!-- filter --}}
          </form>







            </div>
          </div>
          <!--End Sidebar-->
          <!--Main Content-->
          <div class="col-12 col-sm-12 col-md-9 col-lg-9 main-col pt-3"  style="border: 2px solid black;border-radius:10px">

            <div class="productList">
              <!--Toolbar-->
              
              <!--End Toolbar-->
              <div class="grid-products grid--view-items">
                <div class="row">
                  {{#each productData}}
                  <label for="" hidden>{{this._id}}</label>
                  <div class="col-6 col-sm-6 col-md-4 col-lg-4 item">
                    <!-- start product image -->
                    <div class="product-image">
                      <!-- start product image -->
                      <a href="productPage/{{this._id}}">
                        <!-- image -->
                        <img class="primary blur-up lazyload rounded" data- src="/images/{{this.mainImage.filename}}"
                          src="/images/{{this.mainImage.filename}}" alt="image" title="product">
                        <!-- End image -->
                        <!-- Hover image -->
                        <img class="hover blur-up lazyload rounded" data- src="/images/{{this.mainImage.filename}}"
                          src="/images/{{this.mainImage.filename}}" alt="image" title="product">
                        <!-- End hover image -->
                        <!-- product label -->
                  
                        <!-- End product label -->
                      </a>
                      <!-- end product image -->

                      <!-- Start product button -->
                      <div class="text-center mt-2">
                        <div class="variants add" action="#" onclick="addToCart('{{this._id}}')" method="get">
                          <button class="btn btn-addto-cart" type="button">Add To Cart</button>
                        </div>
                        <div class="modal fade" id="cartButtonModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                          aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Added To Cart</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                  aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Product added to cart successfully
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                               <a href="/cart"> <button type="button" class="btn btn-outline" >Go To Cart</button></a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                     



                      <!-- end product button -->
                    </div>
                    <!-- end product image -->

                    <!--start product details -->
                    <div class="product-details text-center">
                      <!-- product name -->
                      <div class="product-name">
                        <a href="#">{{this.title}}</a>
                      </div>
                      <!-- End product name -->
                      <!-- product price -->
                      <div class="product-price">
                        <span class="old-price">₹{{this.MRP}}</span>
                        <span class="price">₹{{this.price}}</span>
                      </div>
                  

                    </div>
                    <!-- End product details -->
                  </div>

                  {{/each}}
                </div>
              </div>
            </div>
            <hr class="clear">
            <div class="pagination">
              <ul>
                {{#each pagesCount}}
                <li class="active">
                  <a class="btn btn-light"
                    href="/shop?search={{../search}}&category={{../category}}&filter={{../sort}}&page={{this}}"
                    {{#ifEqual ../page this}}active{{/ifEqual}}>{{inc @key}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <!--End Main Content-->
        </div>
      </div>

    </div>
    <!--End Body Content-->

    <!--Footer-->
    {{!-- --}}
    <!--End Footer-->

    <!--Scoll Top-->
    <span id="site-scroll"><i class="icon anm anm-angle-up-r"></i></span>
    <!--End Scoll Top-->

    <!--Quick View popup-->

    <!--End Quick View popup-->
