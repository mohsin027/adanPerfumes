<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <section>
   <div class="col-md-6 offset-md-3">
                    <span class="anchor" id="formResetPassword"></span>
                    <hr class="mb-5">

                    <!-- form card reset password -->
                    <div class="card card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">OTP Page</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" action="/otpSubmitSignup" method="post" role="form" autocomplete="off">
                                <div class="form-group">
                                    <label for="">&nbsp{{otpError}}</label><br>
                                    {{!-- <label for="inputResetPasswordEmail">OTP</label> --}}
                                    <input type="text" name="OTP" class="form-control" id="inputResetPasswordEmail" required="">
                                    {{!-- <span id="helpResetPasswordEmail" class="form-text small text-muted">
                                            Password reset instructions will be sent to this email address.
                                        </span> --}}
                                </div>
                                <div class="form-group">
                                    <br>
                                    <button  type="submit" class="btn btn-success btn-lg float-right">Submit OTP</button>
                                    <br>
                                     <div class="d-flex justify-content-center text-center" style="font-weight: 500; cursor: pointer;" id="countdown"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /form card reset password -->

                </div>
    </section>
     <script>
        let countdown=document.getElementById("countdown");
        let count=61;
        const coundownInterval = setInterval(() => {
          count--;
          countdown.innerText=" Resend OTP in "+count;
          checkOver()
        }, 1000);
        function checkOver(){
          if(count==0){
            clearInterval(coundownInterval)
            countdown.innerHTML=`
            <span onclick="window.location.reload()">Resend OTP</span>
            `
          }
        }
      </script>
</body>
</html>